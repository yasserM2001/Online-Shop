@model CategoryViewModel

<!-- Modal Header -->
<div id="headerContent" class="modal-header">
    <h4 class="modal-title">
        Deactivate User
    </h4>
    <button type="button" class="btn-close" onclick="CloseModal()"></button>
</div>

<!-- Modal body -->
<div id="ModalBody" class="modal-body">
    <form id="CategoryActivationForm" method="post" asp-action="Activation" asp-controller="Category">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="InsertionDate" />
        <input type="hidden" asp-for="ModifiedDate" />
        <input type="hidden" asp-for="IsDeleted" />
        <input type="hidden" name="viewName" value="@ViewBag.viewName" />
        @if (!Model.IsDeleted)
        {
            <p>Are you sure you want to delete this category (@Model.Name)?</p>
        }
        else
        {
            <p>Are you sure you want to activate this user (@Model.Name)?</p>
        }
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" onclick="CloseModal()">Close</button>
            <button type="submit" class="btn btn-dark">Ok</button>
        </div>
    </form>
</div>