@model RegisterViewModel

@{
    string returnViewName = ViewBag.returnView;
}

<!-- Modal Header -->
<div id="headerContent" class="modal-header">
    <h4 class="modal-title">
        Change Password
    </h4>
    <button type="button" class="btn-close" onclick="CloseModal()"></button>
</div>
<!-- Modal body -->
<div id="ModalBody" class="modal-body">
    <form id="ChangePasswordForm" asp-action="ChangePassword" asp-controller="ApplicationUser" asp-route-returnViewName="@returnViewName">
        <input type="hidden" asp-for="UserName" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="IsActive" />

        <div class="mb-3 mt-3">
            <label asp-for="Password"></label>
            <input class="form-control" placeholder="enter new password" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="mb-3 mt-3">
            <label asp-for="ConfirmPassword"></label>
            <input class="form-control" placeholder="confirm password" asp-for="ConfirmPassword">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>

        <div asp-validation-summary="All"></div>
        <!-- Add other fields as needed -->
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" onclick="CloseModal()">Close</button>
            <button type="submit" class="btn btn-dark">Save</button>
        </div>
    </form>

</div>
