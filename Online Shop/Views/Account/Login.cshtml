@model LoginUserViewModel
@{
    ViewData["Title"] = "Login";
}

<head>
    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        .h-custom {
            height: calc(100% - 73px);
        }
    </style>
</head>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-75">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="/Images/black-shopping-cart-icon.png"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <h2>Login</h2>
                <hr />
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <input asp-for="UserName" class="form-control form-control-lg"
                               placeholder="Enter a valid username" />
                        <label class="form-label" for="form3Example3">Username</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input asp-for="Password" class="form-control form-control-lg"
                               placeholder="Enter password" />
                        <label class="form-label" for="form3Example4">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input asp-for="RememberMe" class="form-check-input me-2" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Remember me
                            </label>
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </div>
                        <a asp-action="ForgotPassword" asp-controller="Account" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-dark btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="/Account/Register"
                                                      class="link-danger">Register</a>
                        </p>
                        
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Do you want to ba a seller? <a asp-action="RequestToBeSeller" asp-controller="Account"
                                                      class="link-danger">Request</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>
